<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:main="clr-namespace:MAUI.Template.Features.Main;assembly=MAUI.Template"
             xmlns:markups="clr-namespace:MAUI.Template.Markups;assembly=MAUI.Template"
             x:Class="MAUI.Template.Features.Main.MainView"
             x:DataType="{x:Type main:MainViewModel}">

    <StackLayout>
        <Button Text="{markups:Translate Action_Show_Gallery}"
                Command="{Binding GalleryCommand}" />
        
        <Button Text="{markups:Translate Action_Show_Messaging}"
                Command="{Binding MessagingCommand}" />
        
        <Button Text="{markups:Translate Action_Show_Language}"
                Command="{Binding LanguageCommand}" />
    </StackLayout>
</ContentPage>