<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:XamarinTemplate.Views.Main;assembly=XamarinTemplate"
             x:Class="XamarinTemplate.Views.Main.MainView"
             x:DataType="{x:Type viewModels:MainViewModel}">

    <StackLayout>
        <Label Text="Welcome to Xamarin.Forms!"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand" />

        <Button Text="Go to ListView"
                Command="{Binding ListCommand}" />
    </StackLayout>
</ContentPage>